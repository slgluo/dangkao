<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true" >

    <Button
        android:id="@+id/btn_exercise_order"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/xml_btn_exercise_order"
        android:text="@string/string_exercise_order"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_exercise_chapter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/xml_btn_exercise_chapter"
        android:layout_toRightOf="@+id/btn_exercise_order"
        android:layout_toEndOf="@+id/btn_exercise_order"
        android:text="@string/string_exercise_chapter"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_exercise_random"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/xml_btn_exercise_random"
        android:layout_below="@+id/btn_exercise_order"
        android:text="@string/string_exercise_random"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_exercise_mock"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/xml_btn_exercise_mock"
        android:layout_below="@+id/btn_exercise_random"
        android:text="@string/string_exercise_mock"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_exercise_strengthen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/btn_exercise_mock"
        android:layout_alignLeft="@+id/btn_exercise_chapter"
        android:background="@drawable/xml_btn_exercise_strengthen"
        android:text="@string/string_exercise_strengthen"
        android:textColor="@color/white" />

	</RelativeLayout>
</RelativeLayout>